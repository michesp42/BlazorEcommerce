@page "/product/{id:int}"

<PageTitle>Product Details</PageTitle>

<h3>Product Details</h3>

@if(product is null)
{
    <span>Loading product ...</span>
}
else
{
    <div class="container">
        <div class="card" style="width: 100%; height: 600px">
            <img src="@product.ImageUrl" class="card-img-top img-thumbnail img-fit" alt="@product.Title">
        
            <div class="card-body">
                <h4>@product.Title</h4>
                <p class="card-text">@product.Description</p>
            </div>
            
            <div class="badge bg-primary m-2 p-2">
                <h5 class="oi oi-dollar">
                    <span class="font-monospace">@product.Price</span>
                </h5>
            </div>
        </div>
    </div>
}